{
    "name": "@ahdcreative/gtm-vue",
    "version": "1.0.0",
    "description": "Vue 3 plugin for Google Tag Manager",
    "author": {
        "name": "AHDCreative",
        "url": "https://ahd-creative.agency"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ahdcreative/gtm-vue.git"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest",
        "check": "biome check .",
        "fix": "biome check --write .",
        "prepare": "npm run build"
    },
    "peerDependencies": {
        "vue": "^3.0.0",
        "vue-router": "^4.0.0"
    },
    "peerDependenciesMeta": {
        "vue-router": {
            "optional": true
        }
    },
    "dependencies": {
        "@ahdcreative/gtm-core": "^1.0.0"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.2",
        "tsup": "^8.5.1",
        "typescript": "^5.7.3",
        "vitest": "^2.1.8",
        "vue": "^3.5.13",
        "vue-router": "^4.5.0",
        "jsdom": "^24.0.0"
    },
    "license": "MIT"
}